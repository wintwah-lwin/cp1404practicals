BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: '34'
            font_size: 40
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Label:
        id: output_label
        font_size: 40
        text: '54.717'
        color: (1, 1, 0, 1)
